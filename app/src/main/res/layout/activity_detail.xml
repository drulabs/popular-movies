<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/cl_details_holder"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true"
        android:background="@color/pureWhite">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/app_bar_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true">

            <android.support.design.widget.CollapsingToolbarLayout
                android:id="@+id/toolbar_details_collapsing"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                app:contentScrim="@color/pureWhite"
                app:layout_collapseMode="parallax"
                app:layout_scrollFlags="scroll|exitUntilCollapsed"
                app:titleEnabled="true">

                <android.support.v7.widget.Toolbar
                    android:id="@+id/toolbar_details"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:elevation="10dp"
                    app:layout_collapseMode="pin"
                    app:titleTextColor="@color/pureWhite">

                    <!--<ImageView-->
                    <!--android:id="@+id/img_detail_favorite"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_gravity="center_vertical|end"-->
                    <!--android:layout_marginEnd="@dimen/margin_medium"-->
                    <!--android:contentDescription="@string/text_favourite_icon"-->
                    <!--android:padding="@dimen/margin_medium"-->
                    <!--android:src="@drawable/ic_star_filled_gray" />-->

                </android.support.v7.widget.Toolbar>

                <ImageView
                    android:id="@+id/img_detail_backdrop"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:contentDescription="@string/text_movie_backdrop"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_backdrop"
                    tools:src="@drawable/sample_backdrop_image" />
            </android.support.design.widget.CollapsingToolbarLayout>

        </android.support.design.widget.AppBarLayout>

        <org.drulabs.popularmovies.ui.controls.FloatingImageView
            android:id="@+id/img_detail_poster"
            android:layout_width="@dimen/movie_anchor_width"
            android:layout_height="@dimen/movie_anchor_width"
            android:layout_margin="@dimen/margin_medium"
            android:adjustViewBounds="true"
            android:contentDescription="@string/text_movie_poster"
            android:fitsSystemWindows="true"
            android:src="@drawable/ic_placeholder"
            app:layout_anchor="@+id/app_bar_details"
            app:layout_anchorGravity="bottom|end"
            app:layout_collapseMode="parallax" />

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/margin_small"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/ll_movie_detail_holder"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/movie_anchor_width"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_detail_movie_year"
                        style="@style/detail_movie_style"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_x_large"
                        tools:text="Release year: 2015" />

                    <TextView
                        android:id="@+id/tv_detail_movie_runtime"
                        style="@style/detail_movie_style"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_x_large"
                        android:textStyle="bold|italic"
                        tools:text="Runtime: 120 min" />

                    <TextView
                        android:id="@+id/tv_detail_movie_rating"
                        style="@style/detail_movie_style"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_x_large"
                        android:textColor="@color/pureBlack"
                        android:textSize="@dimen/txt_regular"
                        tools:text="IMDB Rating: 8.9 / 10" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_details_synopsis_label"
                    style="@style/detail_movie_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ll_movie_detail_holder"
                    android:layout_marginStart="@dimen/margin_x_large"
                    android:text="@string/txt_synopsis" />

                <View
                    android:id="@+id/separator_synopsis_label"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/tv_details_synopsis_label"
                    android:layout_margin="@dimen/margin_medium"
                    android:background="@color/dark_grey" />

                <TextView
                    android:id="@+id/tv_details_synopsis"
                    style="@style/detail_movie_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/separator_synopsis_label"
                    android:layout_margin="@dimen/margin_medium"
                    android:textSize="@dimen/txt_medium"
                    android:textStyle="normal"
                    tools:text="@string/really_long_text" />

                <View
                    android:id="@+id/separator_synopsis"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/tv_details_synopsis"
                    android:layout_margin="@dimen/margin_medium"
                    android:background="@color/dark_grey" />

                <TextView
                    android:id="@+id/tv_trailers_and_reviews"
                    style="@style/detail_movie_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/separator_synopsis"
                    android:layout_margin="@dimen/margin_medium"
                    android:text="@string/txt_trailers_reviews"
                    android:textStyle="normal" />

            </RelativeLayout>
        </android.support.v4.widget.NestedScrollView>

    </android.support.design.widget.CoordinatorLayout>

    <ProgressBar
        android:id="@+id/pb_details_loader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone" />
</FrameLayout>
