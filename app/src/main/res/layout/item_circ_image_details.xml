<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_circular_item"
            android:layout_width="@dimen/movie_anchor_width"
            android:layout_height="@dimen/movie_anchor_width"
            android:layout_marginBottom="@dimen/margin_medium"
            android:layout_marginEnd="@dimen/margin_x_large"
            android:layout_marginStart="@dimen/margin_x_large"
            android:layout_marginTop="@dimen/margin_medium"
            android:contentDescription="@string/app_name"
            android:src="@mipmap/ic_launcher"
            tools:src="@mipmap/ic_launcher" />

        <ImageView
            android:id="@+id/img_circ_youtube"
            android:layout_width="@dimen/play_icon_width"
            android:layout_height="@dimen/play_icon_width"
            android:layout_gravity="center"
            android:contentDescription="@string/app_name"
            android:src="@drawable/ic_youtube"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/img_circ_share"
            android:layout_width="@dimen/share_icon_width"
            android:layout_height="@dimen/share_icon_width"
            android:contentDescription="@string/app_name"
            android:padding="@dimen/margin_small"
            android:src="@drawable/ic_share_icon"
            android:visibility="gone" />

    </FrameLayout>

    <TextView
        android:id="@+id/tv_circ_item_details"
        style="@style/detail_movie_style"
        android:layout_width="@dimen/item_circ_width"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/margin_medium"
        android:ellipsize="end"
        android:gravity="center_horizontal"
        android:maxLines="2"
        android:textSize="@dimen/txt_small"
        tools:text="Jurrasic" />

</LinearLayout>